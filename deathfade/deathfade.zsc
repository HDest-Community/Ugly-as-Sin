version "4.5"

class UaS_DeathFader : Thinker {
	HDPlayerPawn plr;
	double fadeamount;
	double counttoblack;

	override void Tick() {
		super.Tick();
		fadeamount = min(fadeamount + (1.0/counttoblack), 1.0);
		Shader.SetUniform1f(plr.player, "deathfade", "fadeamount", fadeamount);
		if (fadeamount >= 1.0 || plr.health > 0) { destroy(); }
	}
}
